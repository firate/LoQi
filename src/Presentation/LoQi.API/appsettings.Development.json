{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=/Users/firatergul/Developer/databases/loqi.db;",
    "Redis": "localhost:6379"
  },
  "StaticFiles": {
    "EnableBrotliCompression": true,
    "EnableGzipCompression": true,
    "CacheMaxAge": "30.00:00:00"
  },
  "UdpListener": {
    "Port": 10080,
    "ChannelCapacity": 5000,
    "ProcessingStatsInterval": 60
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Extensions.Hosting": "Information",
      "LoQi": "Debug",
      "LoQi.Application.Services.UdpPackageListener": "Debug",
      "LoQi.API.BackgroundServices.UdpLogProcessingService": "Debug",
      "LoQi.Infrastructure.RedisStreamService": "Debug",
      "LoQi.API.BackgroundServices.ProcessedLogsConsumerService": "Debug",
      "LoQi.API.BackgroundServices.FailedLogsConsumerService": "Debug",
      "LoQi.API.BackgroundServices.RetryLogsConsumerService": "Debug",
      "StackExchange.Redis": "Warning"
    }
  },
  "LoQi": {
    "Notifications": {
      "Enabled": true,
      "ChannelCapacity": 10000
    },
    "Batching": {
      "BatchSize": 100,
      "FlushIntervalMs": 2000,
      "MaxMemoryMb": 50,
      "MaxBufferSize": 10000
    },
    "Redis": {
      "Stream": {
        "StreamName": "loqi:logs:stream",
        "MaxStreamLength": 100000,
        "DefaultBatchSize": 50,
        "DefaultBlockTimeMs": 1000,
        "MessageRetentionMs": 86400000,
        "ConsumerGroups": {
          "processed-logs": {
            "BatchSize": 100,
            "BlockTimeMs": 1000,
            "MaxRetries": 3,
            "AckTimeoutMs": 30000
          },
          "failed-logs": {
            "BatchSize": 25,
            "BlockTimeMs": 2000,
            "MaxRetries": 1,
            "AckTimeoutMs": 60000
          },
          "retry-logs": {
            "BatchSize": 50,
            "BlockTimeMs": 1500,
            "MaxRetries": 5,
            "AckTimeoutMs": 45000
          }
        }
      }
    }
  }
}